<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bds.javafx.controllers.EmployeesController">
   <children>
      <TableView fx:id="systemEmployeesTableView" layoutX="25.0" layoutY="51.0" prefHeight="310.0" prefWidth="550.0">
        <columns>
          <TableColumn fx:id="employeeId" prefWidth="110.0" text="ID" />
          <TableColumn fx:id="FirstName" prefWidth="110.0" text="Firstname" />
            <TableColumn fx:id="Surname" prefWidth="110.0" text="Surname" />
            <TableColumn fx:id="Email" prefWidth="110.0" text="Email" />
            <TableColumn fx:id="Building" prefWidth="110.0" text="Building" />
        </columns>

      </TableView>
       <Button fx:id="addEmployeeButton" layoutX="481.0" layoutY="365.0" mnemonicParsing="false" onAction="#handleAddEmployeeButton" text="Add employee" />
      <Button fx:id="refreshButton" layoutX="272.0" layoutY="365.0" mnemonicParsing="false" onAction="#handleRefreshButton" text="Refresh" />
      <Button fx:id="injectButton" layoutX="25.0" layoutY="365.0" mnemonicParsing="false" onAction="#handleInjectButton" text="SQL injection simulation" />
      <Button fx:id="findButton" layoutX="384.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleFindButton" text="Find" />
      <Label layoutX="64.0" layoutY="18.0" text="Find Employee by first name:" />
      <TextField fx:id="findEmployeeTextField" layoutX="226.0" layoutY="14.0" />
      <Button fx:id="findAllButton" layoutX="429.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleRefreshButton" text="Show all employees" />
   </children>
</AnchorPane>
